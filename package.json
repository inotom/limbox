{
  "name": "limbox",
  "version": "1.0.0",
  "description": "Limited checkbox mithril component",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-script && npm run build-sa-script",
    "build-dist": "npm run build-script-dist && npm run build-sa-script-dist",
    "build-script": "browserify --debug src/index.js -t > limbox/limbox.js",
    "build-script-dist": "NODE_ENV=production browserify src/index.js -t | uglifyjs -m -c --comments > limbox/limbox.js",
    "build-sa-script": "browserify --debug src/standalone.js -t > limbox/limbox-standalone.js",
    "build-sa-script-dist": "NODE_ENV=production browserify src/standalone.js -t | uglifyjs -m -c --comments > limbox/limbox-standalone.js",
    "watch": "NODE_ENV=development watchify --debug src/standalone.js -o limbox/limbox-standalone.js -v",
    "server": "browser-sync start --server limbox --files 'limbox/**/*' --no-open",
    "start": "npm run server & npm run watch",
    "watch:test": "nodemon -w test -w src -e js,jsx,es6 -x npm test",
    "test": "mocha --compilers js:babel-register test/**/*.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "author": "iNo <wdf7322@yahoo.co.jp>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "browser-sync": "^2.12.3",
    "browserify": "^13.0.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "power-assert": "^1.3.1",
    "swsutils": "git://github.com/inotom/swsutils.git",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "mithril": "^0.2.3"
  }
}
